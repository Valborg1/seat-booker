<form class="form login-form">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="mb-3">
        <label for="email-login" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="password-login" class="form-label">Password</label>
        <input type="password" class="form-control" id="password-login">
      </div>
  <div class="row">
    <div class="col-md-6">
      <button type="submit" class="btn btn-primary" style="width: 100%" id="login-btn">Login</button>
    </div>
    <div class="col-md-6">
      <a class="btn btn-secondary" href="/signup" style="width: 100%">Sign Up</a>
        <div id="help" class="form-text">Click here to create an account.</div>
    </div>
    </div>
    </div>
  </div>
</form>


